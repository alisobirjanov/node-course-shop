<h2>Редоктировать курс {{course.title}}</h2>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input  id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Названия курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input  id="price" name="price" type="number" class="validate" required value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input  id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите url картинки"></span>
    </div>

    <input type="hidden" name="id" value={{course._id}}>

    <button type="submit" class="btn btn-primary">Добавить курс</button>
</form>

<form method="POST" action="/courses/remove">
    <input type="hidden" name="id" value="{{ course._id }}">
    <button type="submit" class="btn red">Удалить курс</button>
</form>
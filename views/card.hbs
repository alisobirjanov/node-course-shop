<h2>Корзина</h2>
<div class="korzina">
{{#if course.length}}
    <table>
        <thead>
            <tr>
                <th>Нзвание</th>
                <th>Количество</th>
                <th>Дейчтвия</th> 
            </tr>
        </thead>
        <tbody>
            {{#each course}}
            <tr>
                <th>{{title}}</th>
                <th>{{count}}</th>
                <th>
                    <button class="waves-effect waves-light btn-small js-remove" data-id="{{id}}">Удалить</button>
                </th>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Цена:</strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
{{else}}
<p>Корзина пуста</p>
{{/if}}
</div>